                                             Margin="15,5,0,0">
                                    <Label
                                        TextColor="#44687b"
                                        Text="{Binding firstname}"/>
                                    <Label 
                                        TextColor="#44687b"
                                        Text="{Binding lastname}"/>

                                </StackLayout>

                                <StackLayout Orientation="Horizontal"
                                             Margin="15,0,0,5">
                                    <Label 
                                        FontSize="Micro"
                                        Text="Status : "/>
                                    <Label 
