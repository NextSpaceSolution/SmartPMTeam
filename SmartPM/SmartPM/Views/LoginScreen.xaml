<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartPM.Views.LoginScreen"
             xmlns:local="clr-namspace:SmartPM;assembly:SmartPM"
             xmlns:vm="clr-namespace:SmartPM.ViewModels;assembly:SmartPM"
             BackgroundImage="blure_2"
             >
    <!--BackgroundColor="#E91E63"-->
    <ContentPage.BindingContext>
        <vm:AuthenViewModel/>
    </ContentPage.BindingContext>
    
    <AbsoluteLayout Margin="20"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
        <StackLayout>
            <Label Text="SMART PM" FontSize="40" 
                   TextColor="White" 
                   Style="{DynamicResource LabelStyle}" 
                   HeightRequest="70" 
                   HorizontalOptions="CenterAndExpand"></Label>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
<!--
                <ContentView HeightRequest="220" 
                             WidthRequest="200"
                             Grid.Row="0" 
                             Grid.Column="0"
                             Grid.ColumnSpan="2" 
                             Padding="0,20,0,3">
                    <Image Source="" Aspect="AspectFit" />
                </ContentView> -->

                <Entry 
                       Text="{Binding AuthenModel.Username, Mode=TwoWay}"
                       Placeholder="Username" 
                       PlaceholderColor="White"
                       Grid.Row="2" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="2" 
                       TextColor="White"
                       FontSize="Small"  
                       Style="{DynamicResource EntryStyle}"
                      />
                <Entry 
                       Text="{Binding AuthenModel.Password, Mode=TwoWay}"
                       IsPassword="true" 
                       Placeholder="Password"
                       PlaceholderColor="#FFFFFF"
                       Grid.Row="3" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="2" 
                       TextColor="White"
                       FontSize="Small"
                       Style="{DynamicResource EntryStyle}"
                       />

                <Button 
                        Command="{Binding LoginCommand}"
                        x:Name="btn_Clicklogged"
                        TextColor="#3ABCC7"
                        BorderColor="#3ABCC7"
                        BorderWidth="0.8"
                        Text="Sign In" 
                        Grid.Row="4" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="2" 
                      />


                <Label Text="Remember Me"
                       Grid.Row="6"
                       Grid.Column="0"
                       FontSize="Small"
                       TextColor="White"
                       Style="{DynamicResource LabelStyle}"
                       VerticalOptions="Start"
                       HorizontalOptions="Start"/>

                <Switch x:Name="rememberSwitch" IsEnabled="True" IsToggled="False" HorizontalOptions="End" VerticalOptions="End" Grid.Row="6" Grid.Column="1"></Switch>

            <Label Text="Forget Password"
                       Grid.Row="7"
                       Grid.Column="0"
                       FontSize="Small"
                       TextColor="White"
                       Style="{DynamicResource LabelStyle}"
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="CenterAndExpand"
                       />
                <Switch x:Name="KeepSwitch" IsEnabled="True" IsToggled="False" HorizontalOptions="End" VerticalOptions="End" Grid.Row="7" Grid.Column="1"></Switch>
                
            </Grid>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>